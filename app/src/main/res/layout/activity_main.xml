<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/linear_layout_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:background="#000000"
            android:text="TextView" />

        <LinearLayout
            style="@style/linear_layout_h"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_c"
                style="@style/button_simple"
                android:text="@string/btn_c"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_p_m"
                style="@style/button_simple"
                android:text="@string/btn_p_m" />

            <Button
                android:id="@+id/btn_perc"
                style="@style/button_simple"
                android:text="@string/btn_perc" />

            <Button
                android:id="@+id/btn_divide"
                style="@style/button_simple_red"
                android:text="@string/btn_divide" />
        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_h"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                style="@style/button_simple"
                android:text="@string/btn_7" />

            <Button
                android:id="@+id/button6"
                style="@style/button_simple"
                android:text="@string/btn_8" />

            <Button
                android:id="@+id/button7"
                style="@style/button_simple"
                android:text="@string/btn_9" />

            <Button
                android:id="@+id/button8"
                style="@style/button_simple_red"
                android:text="@string/btn_mult" />
        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_h"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button9"
                style="@style/button_simple"
                android:text="@string/btn_4" />

            <Button
                android:id="@+id/button10"
                style="@style/button_simple"
                android:text="@string/btn_5" />

            <Button
                android:id="@+id/button11"
                style="@style/button_simple"
                android:text="@string/btn_6" />

            <Button
                android:id="@+id/button12"
                style="@style/button_simple_red"
                android:text="@string/btn_minus" />

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_h"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                style="@style/button_simple"
                android:text="@string/btn_1" />

            <Button
                android:id="@+id/button14"
                style="@style/button_simple"
                android:text="@string/btn_2" />

            <Button
                android:id="@+id/button15"
                style="@style/button_simple"
                android:text="@string/btn_3" />

            <Button
                android:id="@+id/button16"
                style="@style/button_simple_red"
                android:text="@string/btn_plus" />
        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_h"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0"
                style="@style/button_simple_double_size"
                android:text="@string/btn_0" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/button_simple"
                android:text="@string/btn_dot" />

            <Button
                android:id="@+id/btn_result"
                style="@style/button_simple_red"
                android:text="@string/btn_result" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>